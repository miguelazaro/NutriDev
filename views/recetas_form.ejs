<!-- Breadcrumb -->
<div class="px-6 py-4 text-sm text-gray-500 text-right">
  <a href="/" class="hover:underline text-emerald-600">Inicio</a> /
  <a href="/recetas" class="hover:underline text-emerald-600">Recetas</a> /
  <span><%= receta ? 'Editar' : 'Nueva' %></span>
</div>

<h1 class="text-2xl font-bold mb-6 text-gray-800">
  <%= receta ? 'Editar Receta' : 'Crear Nueva Receta' %>
</h1>

<form 
  method="POST" 
  enctype="multipart/form-data" 
  action="<%= receta ? `/recetas/actualizar/${receta.id}?_method=PUT` : '/recetas/guardar' %>" 
  class="space-y-8"
>

  <div class="bg-white border border-gray-200 rounded-lg shadow-sm p-6">
    <h2 class="text-xl font-semibold mb-4 text-gray-800">1. Información Básica</h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Nombre de la receta*</label>
        <input type="text" name="titulo" value="<%= receta?.titulo || '' %>" required class="w-full form-input" placeholder="Ej: Ensalada César con Pollo">
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Categoría*</label>
        <select name="categoria" required class="w-full form-input">
          <option value="">Selecciona una categoría</option>
          <option value="desayuno" <%= receta?.categoria === 'desayuno' ? 'selected' : '' %>>Desayuno</option>
          <option value="comida" <%= receta?.categoria === 'comida' ? 'selected' : '' %>>Comida</option>
          <option value="cena" <%= receta?.categoria === 'cena' ? 'selected' : '' %>>Cena</option>
          <option value="colacion" <%= receta?.categoria === 'colacion' ? 'selected' : '' %>>Colación</option>
        </select>
      </div>
    </div>

    <div class="mt-6">
      <label class="block text-sm font-medium text-gray-700 mb-1">Descripción breve</label>
      <textarea name="descripcion" rows="3" class="w-full form-input" placeholder="Describe brevemente la receta, sus beneficios o su sabor."><%= receta?.descripcion || '' %></textarea>
    </div>
  </div>

  <div class="bg-white border border-gray-200 rounded-lg shadow-sm p-6">
    <h2 class="text-xl font-semibold mb-4 text-gray-800">2. Detalles de la Receta</h2>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">T. Preparación (min)</label>
        <input type="number" name="tiempo_preparacion" value="<%= receta?.tiempo_preparacion || '' %>" class="w-full form-input" placeholder="Ej: 15">
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">T. Cocción (min)</label>
        <input type="number" name="tiempo_coccion" value="<%= receta?.tiempo_coccion || '' %>" class="w-full form-input" placeholder="Ej: 20">
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Porciones</label>
        <input type="number" name="porciones" value="<%= receta?.porciones || '' %>" class="w-full form-input" placeholder="Ej: 2">
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Dificultad</label>
        <select name="dificultad" class="w-full form-input">
          <option value="fácil" <%= receta?.dificultad === 'fácil' ? 'selected' : '' %>>Fácil</option>
          <option value="medio" <%= receta?.dificultad === 'medio' ? 'selected' : '' %>>Medio</option>
          <option value="difícil" <%= receta?.dificultad === 'difícil' ? 'selected' : '' %>>Difícil</option>
        </select>
      </div>
    </div>
  </div>

  <div class="bg-white border border-gray-200 rounded-lg shadow-sm p-6">
    <h2 class="text-xl font-semibold mb-4 text-gray-800">3. Información Nutricional (por porción)</h2>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Calorías (kcal)</label>
        <input type="number" name="calorias" value="<%= receta?.calorias || '' %>" class="w-full form-input" placeholder="Ej: 350">
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Proteínas (g)</label>
        <input type="number" step="any" name="proteinas" value="<%= receta?.proteinas || '' %>" class="w-full form-input" placeholder="Ej: 30.5">
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Carbohidratos (g)</label>
        <input type="number" step="any" name="carbohidratos" value="<%= receta?.carbohidratos || '' %>" class="w-full form-input" placeholder="Ej: 15.2">
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Grasas (g)</label>
        <input type="number" step="any" name="grasas" value="<%= receta?.grasas || '' %>" class="w-full form-input" placeholder="Ej: 18">
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
    <div class="bg-white border border-gray-200 rounded-lg shadow-sm p-6">
      <h2 class="text-xl font-semibold mb-4 text-gray-800">4. Ingredientes*</h2>
      <label for="ingredientes" class="text-sm text-gray-600 mb-2 block">Ingresa cada ingrediente en una nueva línea.</label>
      <textarea 
        id="ingredientes"
        name="ingredientes" 
        rows="10" 
        required 
        class="w-full form-input font-mono" 
        placeholder="- 2 tazas de lechuga romana&#10;- 150g de pechuga de pollo&#10;- 1/2 aguacate"
      ><% if (receta && receta.ingredientes) { %><%= Array.isArray(receta.ingredientes) ? receta.ingredientes.map(i => i.ingrediente || i).join('\n') : receta.ingredientes %><% } %></textarea>
    </div>
    <div class="bg-white border border-gray-200 rounded-lg shadow-sm p-6">
      <h2 class="text-xl font-semibold mb-4 text-gray-800">5. Preparación*</h2>
      <label for="preparacion" class="text-sm text-gray-600 mb-2 block">Describe los pasos de la preparación.</label>
      <textarea 
        id="preparacion"
        name="preparacion" 
        rows="10" 
        required 
        class="w-full form-input" 
        placeholder="1. Cocina el pollo a la plancha y córtalo en tiras.&#10;2. Lava y corta la lechuga.&#10;3. Mezcla todos los ingredientes."
      ><%= receta?.preparacion || '' %></textarea>
    </div>
  </div>
  
  <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
    <div class="bg-white border border-gray-200 rounded-lg shadow-sm p-6">
      <h2 class="text-xl font-semibold mb-4 text-gray-800">6. Etiquetas</h2>
      <label for="etiquetas" class="block text-sm font-medium text-gray-700 mb-1">Etiquetas (separadas por comas)</label>
      <input 
        type="text" 
        id="etiquetas"
        name="etiquetas" 
        value="<%= receta && receta.etiquetas ? (Array.isArray(receta.etiquetas) ? receta.etiquetas.join(', ') : receta.etiquetas) : '' %>" 
        class="w-full form-input" 
        placeholder="Ej: baja en carbohidratos, alta en proteína, sin gluten">
    </div>
    <div class="bg-white border border-gray-200 rounded-lg shadow-sm p-6">
      <h2 class="text-xl font-semibold mb-4 text-gray-800">7. Imagen (opcional)</h2>
      <input type="file" name="imagen" accept="image/*" class="block w-full text-sm text-gray-600 file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-semibold file:bg-emerald-50 file:text-emerald-700 hover:file:bg-emerald-100">
      <% if (receta?.imagen) { %>
        <div class="mt-4">
          <p class="text-sm text-gray-600 mb-1">Imagen actual:</p>
          <img src="<%= receta.imagen.startsWith('http') ? receta.imagen : '/uploads/' + receta.imagen %>" alt="Imagen receta" class="w-24 h-24 object-cover rounded-lg shadow">
        </div>
      <% } %>
    </div>
  </div>

  <div class="flex justify-between pt-4">
    <a href="/recetas" class="bg-gray-200 hover:bg-gray-300 text-gray-800 font-semibold py-3 px-6 rounded-lg transition-colors">Cancelar</a>
    <button type="submit" class="bg-emerald-600 hover:bg-emerald-700 text-white font-semibold py-3 px-6 rounded-lg shadow-md transition-transform transform hover:scale-105">
      <i class="fas fa-save mr-2"></i> <%= receta ? 'Actualizar Receta' : 'Guardar Receta' %>
    </button>
  </div>
</form>

<!-- Estilos adicionales -->
<style>
  /* Mejoras de estilo general */
  textarea {
    min-height: 120px;
    transition: border-color 0.2s, box-shadow 0.2s;
  }
  
  textarea:focus, input:focus, select:focus {
    border-color: #10b981;
    box-shadow: 0 0 0 2px rgba(16, 185, 129, 0.2);
  }
  
  /* Estilo para campos requeridos */
  input:required, textarea:required, select:required {
    border-left: 3px solid #f59e0b;
  }
  
  /* Mejora para el textarea de ingredientes */
  textarea[name="ingredientes"] {
    line-height: 1.6;
  }
  
  /* Estilo para los placeholders */
  ::placeholder {
    color: #9ca3af;
    opacity: 1;
  }
</style>
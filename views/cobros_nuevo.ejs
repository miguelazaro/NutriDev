<div class="max-w-2xl space-y-6">
    <h1 class="text-2xl font-bold text-gray-800">Nuevo Cobro</h1>

    <form action="/cobros/crear" method="POST" class="bg-white p-6 rounded-lg shadow space-y-4">
        <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Paciente</label>
            <select name="paciente_id" required class="w-full border rounded px-3 py-2">
                <option value="">Seleccioneâ€¦</option>
                <% pacientes.forEach(p=> { %>
                    <option value="<%= p.id %>">
                        <%= p.nombre %>
                    </option>
                    <% }) %>
            </select>
        </div>

        <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Concepto</label>
            <input type="text" name="concepto" class="w-full border rounded px-3 py-2"
                placeholder="Consulta, seguimiento, etc." required>
        </div>

        <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Monto (MXN)</label>
            <input type="number" step="0.01" min="1" name="monto" class="w-full border rounded px-3 py-2" required>
        </div>

        <div class="flex justify-end gap-3">
            <a href="/cobros" class="px-4 py-2 rounded border">Cancelar</a>
            <button class="bg-emerald-600 text-white px-4 py-2 rounded hover:bg-emerald-700">Crear y Cobrar</button>
        </div>
    </form>
</div>
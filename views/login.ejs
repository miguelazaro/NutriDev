<form method="POST" action="/login">
  <h1 class="text-2xl font-bold mb-6 text-center text-gray-800">Iniciar sesión</h1>
  
  <% if (error.length > 0) { %>
    <div class="bg-red-50 text-red-700 p-3 rounded-lg mb-4 text-sm">
      <i class="fas fa-exclamation-circle mr-2"></i><%= error[0] %>
    </div>
  <% } %>

  <div class="mb-4">
    <input name="email" type="email" placeholder="Correo electrónico" required 
           class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-transparent">
  </div>

  <div class="mb-6">
    <input name="password" type="password" placeholder="Contraseña" required 
           class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-transparent">
  </div>

  <button type="submit" class="w-full bg-emerald-600 text-white py-3 px-4 rounded-lg hover:bg-emerald-700 transition duration-300 font-medium">
    Entrar al sistema
  </button>

  <p class="mt-6 text-center text-gray-600">
    ¿No tienes cuenta? 
    <a href="/register" class="text-emerald-600 font-medium hover:underline">Regístrate ahora</a>
  </p>
</form>
<div class="flex justify-between items-center px-6 py-4 bg-white shadow-sm">
  <h1 class="text-2xl font-bold text-gray-800">Recetas disponibles</h1>
  <a href="/recetas/nueva"
     class="group inline-flex items-center gap-2 bg-gradient-to-br from-emerald-500 to-emerald-600 text-white font-semibold py-2 px-4 rounded-lg shadow-md hover:from-emerald-600 hover:to-emerald-700 transition-transform transform hover:scale-105">
    <i class="fas fa-plus group-hover:animate-pulse"></i> Crear receta personalizada
  </a>
</div>

<main class="max-w-7xl mx-auto p-6 space-y-6">
  <form class="mb-6 flex" method="GET" action="/recetas">
    <input type="text" name="q" value="<%= busqueda %>" placeholder="Buscar receta (Ej: pollo, res, pasta)"
           class="w-full px-4 py-2 border border-gray-300 rounded-l-lg focus:ring-2 focus:ring-emerald-500">
    <button class="bg-emerald-600 text-white px-4 py-2 rounded-r-lg">Buscar</button>
  </form>

  <% if (recetas.length === 0) { %>
    <p class="text-center text-gray-500">No se encontraron recetas.</p>
  <% } %>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
    <% recetas.forEach(r => { %>
      <div class="bg-white rounded-xl border shadow hover:shadow-md transition overflow-hidden">
        <!-- Imagen con placeholder si falta -->
        <% if (r.strMealThumb || r.imagen) { %>
          <img src="<%= r.strMealThumb || r.imagen %>" alt="<%= r.strMeal || r.titulo %>" 
               class="w-full h-48 object-cover">
        <% } else { %>
          <div class="w-full h-48 bg-gray-200 flex items-center justify-center">
            <span class="text-gray-500">Sin imagen</span>
          </div>
        <% } %>
        
        <div class="p-4">
          <h3 class="text-lg font-semibold text-gray-800 mb-1">
            <%= r.strMeal || r.titulo %>
          </h3>
          
          <p class="text-sm text-gray-600">
            <span class="font-medium">Categoría:</span>
            <%= r.strCategory || r.categoria || 'Sin categoría' %>
          </p>
          
          <p class="text-sm text-gray-600">
            <span class="font-medium">Origen:</span>
            <%= r.strArea || r.origen || 'Personal' %>
          </p>

          <!-- Enlace para ver receta completa -->
          <% if (r.idMeal) { %>
            <!-- Receta de la API -->
            <a href="/recetas/api/<%= r.idMeal %>"
               class="mt-2 inline-block bg-emerald-100 hover:bg-emerald-200 text-emerald-800 font-medium py-1 px-3 rounded-full text-sm transition-colors">
              <i class="fas fa-external-link-alt mr-1"></i> Ver receta completa
            </a>
          <% } else if (r.id) { %>
            <!-- Receta local -->
            <a href="/recetas/detalle/<%= r.id %>"
               class="mt-2 inline-block bg-blue-100 hover:bg-blue-200 text-blue-800 font-medium py-1 px-3 rounded-full text-sm transition-colors">
              <i class="fas fa-eye mr-1"></i> Ver receta
            </a>
          <% } %>

          <!-- Botones de edición/eliminación (solo para recetas locales del usuario) -->
          <% if (r.id && usuario && r.usuarioId === usuario.id) { %>
            <div class="mt-4 flex gap-2">
              <a href="/recetas/editar/<%= r.id %>"
                 class="text-blue-600 hover:text-blue-800 text-sm font-medium flex items-center gap-1">
                <i class="fas fa-edit"></i> Editar
              </a>
              <form action="/recetas/eliminar/<%= r.id %>" method="POST"
                    onsubmit="return confirm('¿Estás seguro de que quieres eliminar esta receta?')">
                <button type="submit"
                        class="text-red-600 hover:text-red-800 text-sm font-medium flex items-center gap-1">
                  <i class="fas fa-trash-alt"></i> Eliminar
                </button>
              </form>
            </div>
          <% } %>
        </div>
      </div>
    <% }) %>
  </div>
</main>
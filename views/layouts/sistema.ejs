<% if (typeof active==='undefined' ) { var active='' ; } %>
  <!DOCTYPE html>
  <html lang="es">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>NutriDev - Sistema</title>

    <!-- Tailwind compilado local -->
    <link rel="stylesheet" href="/css/output.css?v=1">

    <!-- (Opcional) Google Fonts y FontAwesome (permitidos por CSP en style-src https:) -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

    <!-- IMPORTANTE: No uses CDN de scripts porque Helmet bloquea script-src externos.
       Si necesitas Chart.js, súbelo a /public/assets/js/chart.umd.js y descomenta: -->
    <!-- <script src="/assets/js/chart.umd.js"></script> -->
  </head>

  <body class="bg-gray-50 text-gray-800 font-sans">
    <div class="flex min-h-screen">
      <!-- overlay para el sidebar en mobile -->
      <div id="sidebar-overlay" class="hidden fixed inset-0 bg-black bg-opacity-50 z-40 md:hidden"></div>

      <!-- Sidebar -->
      <aside id="sidebar"
        class="bg-white shadow-xl w-64 flex flex-col border-r fixed md:relative inset-y-0 left-0 z-50 transform transition-transform duration-300 ease-in-out -translate-x-full md:translate-x-0">
        <div class="p-6 relative">
          <img src="/assets/img/logo_nutridev.png" alt="NutriDev" class="w-full" />
          <div
            class="absolute bottom-0 left-6 right-6 h-px bg-gradient-to-r from-emerald-200 via-gray-200 to-emerald-200 opacity-70 rounded-full">
          </div>
        </div>

        <nav class="flex-1 px-4 py-6 space-y-1">
          <a href="/dashboard"
            class="flex items-center gap-3 px-4 py-3 rounded-lg transition-all duration-200 <%= active === 'dashboard' ? 'bg-emerald-100 text-emerald-700 font-semibold shadow-inner' : 'text-gray-700 hover:bg-gray-100' %>">
            <i class="fas fa-home text-emerald-500 w-5"></i> Inicio
          </a>

          <a href="/pacientes"
            class="flex items-center gap-3 px-4 py-3 rounded-lg transition-all duration-200 <%= active === 'pacientes' ? 'bg-emerald-100 text-emerald-700 font-semibold shadow-inner' : 'text-gray-700 hover:bg-gray-100' %>">
            <i class="fas fa-user-injured text-emerald-500 w-5"></i> Pacientes
          </a>

          <a href="/planes-alimenticios"
            class="flex items-center gap-3 px-4 py-3 rounded-lg transition-all duration-200 <%= active === 'planes-alimenticios' ? 'bg-emerald-100 text-emerald-700 font-semibold shadow-inner' : 'text-gray-700 hover:bg-gray-100' %>">
            <i class="fas fa-clipboard-list text-emerald-500 w-5"></i>
            Planes Alimenticios
            <% if (user && user.rol !=='admin' && user.plan !=='premium' ) { %>
              <span class="ml-2 text-yellow-500 text-xs flex items-center gap-1">
                <i class="fas fa-crown"></i> Premium
              </span>
              <% } %>
          </a>

          <a href="/recetas"
            class="flex items-center gap-3 px-4 py-3 rounded-lg transition-all duration-200 <%= active === 'recetas' ? 'bg-emerald-100 text-emerald-700 font-semibold shadow-inner' : 'text-gray-700 hover:bg-gray-100' %>">
            <i class="fas fa-utensils text-emerald-500 w-5"></i>
            Recetas
            <% if (user && user.rol !=='admin' && user.plan !=='premium' ) { %>
              <span class="ml-2 text-yellow-500 text-xs flex items-center gap-1">
                <i class="fas fa-crown"></i> Premium
              </span>
              <% } %>
          </a>

          <a href="/cobros"
            class="flex items-center gap-3 px-4 py-3 rounded-lg transition-all duration-200 <%= active === 'cobros' ? 'bg-emerald-100 text-emerald-700 font-semibold shadow-inner' : 'text-gray-700 hover:bg-gray-100' %>">
            <i class="fas fa-wallet text-emerald-500 w-5"></i> Cobros
          </a>

          <a href="/planes"
            class="flex items-center gap-3 px-4 py-3 rounded-lg transition-all duration-200 <%= active === 'planes' ? 'bg-emerald-100 text-emerald-700 font-semibold shadow-inner' : 'text-gray-700 hover:bg-gray-100' %>">
            <i class="fas fa-crown text-emerald-500 w-5"></i> Planes y Precios
          </a>
        </nav>

        <div class="px-4 pb-4 mt-auto">
          <% if (user) { %>
            <div
              class="text-center p-3 rounded-lg <%= user.plan === 'premium' ? 'bg-yellow-100 text-yellow-800 border border-yellow-200' : 'bg-gray-100 text-gray-700 border' %>">
              <p class="text-xs font-semibold uppercase tracking-wider">Tu Plan Actual</p>
              <p class="font-bold capitalize text-lg">
                <%= user.plan %>
              </p>
              <% if (user.plan==='basico' && user.rol !=='admin' ) { %>
                <a href="/planes" class="text-xs text-emerald-600 hover:underline font-semibold mt-1">Actualizar a
                  Premium</a>
                <% } %>
            </div>
            <% } %>
        </div>
      </aside>

      <!-- Contenido principal -->
      <div class="flex-1 flex flex-col w-full md:w-auto">
        <header class="bg-white shadow-sm py-4 px-6 flex justify-between items-center">
          <button id="sidebar-toggle" class="md:hidden text-gray-600 focus:outline-none">
            <i class="fas fa-bars text-xl"></i>
          </button>

          <div class="text-lg font-medium text-gray-800 flex-1 text-center md:text-left">
            
          </div>

          <% if (user) { %>
            <div class="relative" id="profile-menu">
              <button class="flex items-center space-x-3 cursor-pointer focus:outline-none group">
                <div class="text-right hidden sm:block">
                  <p class="text-sm font-medium text-gray-800 group-hover:text-emerald-600 transition-colors">
                    <%= user.nombre %>
                  </p>
                  <p class="text-xs text-gray-500">Nutriólogo</p>
                </div>
                <div class="relative flex items-center">
                  <div
                    class="w-10 h-10 rounded-full bg-emerald-100 flex items-center justify-center group-hover:bg-emerald-200 transition-colors">
                    <i class="fas fa-user text-emerald-600"></i>
                  </div>
                  <i class="fas fa-chevron-down text-xs ml-1 text-gray-500 hidden sm:block"></i>
                </div>
              </button>

              <div id="profile-dropdown"
                class="absolute right-0 mt-2 w-64 bg-white rounded-md shadow-lg py-1 hidden z-10 border border-gray-200">
                <div class="py-1">
                  <a href="/perfil"
                    class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-emerald-600">
                    <i class="fas fa-user-circle mr-3 text-emerald-500 w-4"></i> Tu perfil
                  </a>

                  <div class="pl-7 space-y-1 border-l border-gray-200 ml-4">
                    <a href="/suscripcion"
                      class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-emerald-600">
                      <i class="fas fa-credit-card mr-3 text-gray-500 w-4"></i> Gestión de la suscripción
                    </a>
                    <a href="/seguridad"
                      class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-emerald-600">
                      <i class="fas fa-shield-alt mr-3 text-gray-500 w-4"></i> Seguridad y privacidad
                    </a>
                    <a href="/configuracion"
                      class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-emerald-600">
                      <i class="fas fa-cog mr-3 text-gray-500 w-4"></i> Configuraciones y preferencias
                    </a>
                    <a href="/integraciones"
                      class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-emerald-600">
                      <i class="fas fa-plug mr-3 text-gray-500 w-4"></i> Lista de integraciones
                    </a>
                    <a href="/cookies"
                      class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-emerald-600">
                      <i class="fas fa-cookie-bite mr-3 text-gray-500 w-4"></i> Configuración de las cookies
                    </a>
                  </div>
                </div>
                <div class="border-t my-1"></div>
                <a href="/logout"
                  class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-emerald-600">
                  <i class="fas fa-sign-out-alt mr-3 text-gray-500 w-4"></i> Cerrar sesión
                </a>
              </div>
            </div>
            <% } %>
        </header>

        <!-- Contenido -->
        <main class="flex-1 p-6">
          <%- body %>
        </main>
      </div>
    </div>

    <!-- JS propio (todo local, nada de CDN por CSP) -->
    <script>
      document.addEventListener('DOMContentLoaded', function () {
        const profileMenu = document.getElementById('profile-menu');
        const dropdown = document.getElementById('profile-dropdown');
        const sidebarToggle = document.getElementById('sidebar-toggle');
        const sidebar = document.getElementById('sidebar');
        const overlay = document.getElementById('sidebar-overlay');

        if (profileMenu) {
          profileMenu.addEventListener('click', function (e) {
            e.stopPropagation();
            dropdown.classList.toggle('hidden');
          });
          document.addEventListener('click', function () {
            dropdown.classList.add('hidden');
          });
        }

        if (sidebarToggle) {
          sidebarToggle.addEventListener('click', function () {
            sidebar.classList.toggle('-translate-x-full');
            overlay.classList.toggle('hidden');
            document.body.classList.toggle('overflow-hidden');
          });
        }

        if (overlay) {
          overlay.addEventListener('click', function () {
            sidebar.classList.add('-translate-x-full');
            overlay.classList.add('hidden');
            document.body.classList.remove('overflow-hidden');
          });
        }

        document.querySelectorAll('#sidebar a').forEach(link => {
          link.addEventListener('click', function () {
            if (window.innerWidth < 768) {
              sidebar.classList.add('-translate-x-full');
              overlay.classList.add('hidden');
              document.body.classList.remove('overflow-hidden');
            }
          });
        });
      });
    </script>
  </body>

  </html>

    </div>

    <!-- Sección 4: Historial médico -->
    <div class="form-section">
      <h2 class="text-xl font-semibold mb-4 text-gray-800">Historial médico</h2>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Historial médico</label>
        <textarea name="historial" rows="4"
          class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-transparent"
          placeholder="Alergias, condiciones crónicas, cirugías previas, etc."><%= paciente?.historial || '' %></textarea>
      </div>
    </div>

    <!-- Botones -->
    <div class="flex justify-between">
      <a href="/pacientes"
        class="flex items-center gap-2 bg-gray-300 hover:bg-gray-400 text-gray-800 font-semibold py-3 px-6 rounded-lg transition-colors duration-300">
        <i class="fas fa-times"></i> Cancelar
      </a>
      <button type="submit"
        class="flex items-center gap-2 bg-gradient-to-br from-emerald-500 to-emerald-700 text-white font-semibold py-3 px-6 rounded-lg shadow-lg hover:from-emerald-600 hover:to-emerald-800 transition-transform transform hover:scale-105">
        <i class="fas fa-save"></i> <%= paciente ? 'Actualizar' : 'Registrar' %>
      </button>
    </div>
  </form>
</main>



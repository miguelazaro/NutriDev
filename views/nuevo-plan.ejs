<div class="max-w-6xl mx-auto bg-white p-6 sm:p-8 shadow rounded-lg">
    <div class="flex items-center justify-between mb-6">
        <h1 class="text-2xl sm:text-3xl font-bold text-emerald-600">
            Nuevo Plan Alimenticio
        </h1>
        <a href="/planes-alimenticios" class="text-emerald-700 hover:underline flex items-center gap-2">
            <i class="fas fa-arrow-left"></i> Volver a Planes Alimenticios
        </a>
    </div>

    <% if (success) { %>
        <div class="bg-green-100 text-green-800 p-3 rounded text-sm mb-4">
            <%= success %>
        </div>
        <% } %>
            <% if (error && error.length) { %>
                <div class="bg-red-100 text-red-800 p-3 rounded text-sm mb-4">
                    <%= error %>
                </div>
                <% } %>

                    <form action="/planes-alimenticios" method="POST" class="space-y-6">
                        <!-- Título -->
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Título *</label>
                            <input type="text" name="titulo" required value="<%= formData?.titulo || '' %>"
                                class="w-full border rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-emerald-300"
                                placeholder="Plan semanal personalizado">
                        </div>

                        <!-- Paciente -->
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Paciente (opcional)</label>
                            <select name="paciente_id"
                                class="w-full border rounded px-3 py-2 bg-white focus:outline-none focus:ring-2 focus:ring-emerald-300">
                                <option value="">— Sin asignar —</option>
                                <% (pacientes || []).forEach(p=> { %>
                                    <option value="<%= p.id %>" <%=String(formData?.paciente_id||'')===String(p.id)
                                        ? 'selected' : '' %>>
                                        <%= p.nombre %>
                                    </option>
                                    <% }) %>
                            </select>
                        </div>

                        <!-- Datos opcionales -->
                        <div class="grid sm:grid-cols-2 gap-4">
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">Objetivo</label>
                                <input type="text" name="objetivo" value="<%= formData?.objetivo || '' %>"
                                    class="w-full border rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-emerald-300"
                                    placeholder="Déficit calórico, recomposición, etc.">
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">Calorías objetivo</label>
                                <input type="number" min="0" step="1" name="calorias"
                                    value="<%= formData?.calorias || '' %>"
                                    class="w-full border rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-emerald-300"
                                    placeholder="Ej. 1900">
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">Fecha de inicio</label>
                                <input type="date" name="fecha_inicio" value="<%= formData?.fecha_inicio || '' %>"
                                    class="w-full border rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-emerald-300">
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">Fecha de fin</label>
                                <input type="date" name="fecha_fin" value="<%= formData?.fecha_fin || '' %>"
                                    class="w-full border rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-emerald-300">
                            </div>
                        </div>

                        <!-- Contenido -->
                        <div>
                            <div class="flex items-center justify-between mb-2">
                                <label class="block text-sm font-medium text-gray-700">Contenido del plan *</label>
                                <button type="button" id="btn-template"
                                    class="text-xs bg-gray-100 hover:bg-gray-200 px-2 py-1 rounded border">
                                    Insertar plantilla semanal
                                </button>
                            </div>
                            <textarea name="contenido" id="contenido" required rows="16"
                                class="w-full border rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-emerald-300"
                                placeholder="Escribe aquí el plan por días (desayuno, colaciones, comida, cena, agua, notas)..."><%= formData?.contenido || '' %></textarea>
                            <p class="mt-2 text-xs text-gray-500">
                                Tip: estructura por <em>Día 1… Día 7</em>, con sustituciones al final.
                            </p>
                        </div>

                        <!-- Acciones -->
                        <div class="flex items-center gap-3">
                            <button type="submit"
                                class="bg-emerald-600 hover:bg-emerald-700 text-white px-5 py-2 rounded shadow">
                                <i class="fas fa-save mr-1"></i> Guardar plan
                            </button>
                            <a href="/planes-alimenticios" class="text-gray-600 hover:underline">Cancelar</a>
                        </div>
                    </form>
</div>


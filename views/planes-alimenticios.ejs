<div class="max-w-6xl mx-auto bg-white p-6 sm:p-8 shadow rounded-lg space-y-6">

    <!-- ENCABEZADO -->
    <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-4">
        <div>
            <h1 class="text-2xl sm:text-3xl font-bold text-emerald-600 flex items-center gap-2">
                <i class="fas fa-clipboard-list"></i> Planes Alimenticios
            </h1>
            <p class="text-sm text-gray-500">Historial de planes nutricionales generados o creados manualmente</p>
        </div>

        <a href="/planes-alimenticios/nuevo"
            class="inline-flex items-center gap-2 bg-emerald-600 hover:bg-emerald-700 text-white px-4 py-2 rounded shadow text-sm focus:outline-none focus:ring-2 focus:ring-emerald-300">
            <i class="fas fa-plus-circle"></i>
            <span>Nuevo plan manual</span>
        </a>
    </div>

    <!-- MENSAJES FLASH (req.flash devuelve arrays) -->
    <% if (success && success.length) { %>
        <div class="bg-green-100 text-green-800 p-3 rounded text-sm">
            <%= success[0] %>
        </div>
        <% } %>
            <% if (error && error.length) { %>
                <div class="bg-red-100 text-red-800 p-3 rounded text-sm">
                    <%= error[0] %>
                </div>
                <% } %>

                    <!-- LISTADO DE PLANES -->
                    <% if (planes && planes.length> 0) { %>
                        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
                            <% planes.forEach(plan=> { %>
                                <div
                                    class="bg-gray-50 shadow p-4 rounded border border-gray-100 flex flex-col justify-between">
                                    <div>
                                        <div class="flex items-start justify-between gap-3">
                                            <h2 class="text-lg font-semibold text-gray-800">
                                                <%= plan.titulo %>
                                            </h2>
                                        </div>

                                        <div class="mt-1 flex items-center gap-2 text-xs">
                                            <span class="inline-flex items-center px-2 py-0.5 rounded-full
                <%= plan.tipo === 'ia' ? 'bg-purple-100 text-purple-700' : 'bg-emerald-100 text-emerald-700' %>">
                                                <i
                                                    class="fas <%= plan.tipo==='ia' ? 'fa-robot' : 'fa-hands' %> mr-1"></i>
                                                <%= plan.tipo==='ia' ? 'Generado por IA' : 'Manual' %>
                                            </span>
                                            <% if (plan.paciente && plan.paciente.nombre) { %>
                                                <span class="text-gray-500">• Paciente:
                                                    <span class="font-medium text-gray-700">
                                                        <%= plan.paciente.nombre %>
                                                    </span>
                                                </span>
                                                <% } %>
                                        </div>

                                        <p class="text-[11px] text-gray-400 mt-1">
                                            Creado: <%= new Date(plan.createdAt).toLocaleString('es-MX') %>
                                                · Actualizado: <%= new Date(plan.updatedAt).toLocaleString('es-MX') %>
                                        </p>
                                    </div>

                                    <div class="mt-4 flex justify-between gap-3 text-sm">
                                        <a href="/planes-alimenticios/<%= plan.id %>"
                                            class="text-blue-600 hover:underline">
                                            <i class="fas fa-eye"></i> Ver
                                        </a>
                                        <a href="/planes-alimenticios/<%= plan.id %>/editar"
                                            class="text-yellow-600 hover:underline">
                                            <i class="fas fa-edit"></i> Editar
                                        </a>
                                        <form action="/planes-alimenticios/<%= plan.id %>?_method=DELETE" method="POST"
                                            class="js-eliminar-plan" data-titulo="<%= plan.titulo %>">
                                            <button type="submit" class="text-red-600 hover:underline">
                                                <i class="fas fa-trash-alt"></i> Eliminar
                                            </button>
                                        </form>
                                    </div>
                                </div>
                                <% }) %>
                        </div>
                        <% } else { %>
                            <p class="text-gray-500 italic text-sm text-center mt-8">No hay planes alimenticios
                                registrados aún.</p>
                            <% } %>

</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    document.addEventListener('DOMContentLoaded', () => {
        document.querySelectorAll('.js-eliminar-plan').forEach(form => {
            form.addEventListener('submit', (e) => {
                e.preventDefault();
                const titulo = form.dataset.titulo || 'este plan';

                Swal.fire({
                    title: '¿Eliminar plan?',
                    html: `Vas a eliminar <b>${titulo}</b>. Esta acción no se puede deshacer.`,
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'Sí, eliminar',
                    cancelButtonText: 'Cancelar',
                    reverseButtons: true,
                    confirmButtonColor: '#059669',
                    cancelButtonColor: '#6b7280'
                }).then((r) => {
                    if (r.isConfirmed) form.submit();
                });
            });
        });
    });
</script>
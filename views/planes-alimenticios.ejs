<div class="max-w-6xl mx-auto bg-white p-6 sm:p-8 shadow rounded-lg space-y-6">

    <!-- ENCABEZADO -->
    <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-4">
        <div>
            <h1 class="text-2xl sm:text-3xl font-bold text-emerald-600 flex items-center gap-2">
                <i class="fas fa-clipboard-list"></i> Planes Alimenticios
            </h1>
            <p class="text-sm text-gray-500">Historial de planes nutricionales generados o creados manualmente</p>
        </div>

        <a href="/planes-alimenticios/nuevo"
            class="bg-emerald-600 hover:bg-emerald-700 text-white px-4 py-2 rounded shadow text-sm">
            <i class="fas fa-plus-circle mr-1"></i> Nuevo plan manual
        </a>
    </div>

    <!-- MENSAJES FLASH -->
    <% if (success) { %>
        <div class="bg-green-100 text-green-800 p-3 rounded text-sm">
            <%= success %>
        </div>
        <% } %>
            <% if (error) { %>
                <div class="bg-red-100 text-red-800 p-3 rounded text-sm">
                    <%= error %>
                </div>
                <% } %>

                    <!-- LISTADO DE PLANES -->
                    <% if (planes && planes.length> 0) { %>
                        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
                            <% planes.forEach(plan=> { %>
                                <div
                                    class="bg-gray-50 shadow p-4 rounded border border-gray-100 flex flex-col justify-between">
                                    <div>
                                        <h2 class="text-lg font-semibold text-gray-800 mb-1">
                                            <%= plan.titulo %>
                                        </h2>
                                        <p class="text-xs text-gray-500">
                                            Tipo:
                                            <span
                                                class="<%= plan.tipo === 'ia' ? 'text-purple-600' : 'text-green-600' %> font-medium">
                                                <%= plan.tipo==='ia' ? 'Generado por IA' : 'Manual' %>
                                            </span>
                                        </p>
                                        <% if (plan.paciente && plan.paciente.nombre) { %>
                                            <p class="text-xs text-gray-500">Paciente: <%= plan.paciente.nombre %>
                                            </p>
                                            <% } %>
                                    </div>

                                    <div class="mt-4 flex justify-between gap-2 text-sm">
                                        <a href="/planes-alimenticios/<%= plan.id %>"
                                            class="text-blue-600 hover:underline">
                                            <i class="fas fa-eye"></i> Ver
                                        </a>
                                        <a href="/planes-alimenticios/<%= plan.id %>/editar"
                                            class="text-yellow-600 hover:underline">
                                            <i class="fas fa-edit"></i> Editar
                                        </a>
                                        <form action="/planes-alimenticios/<%= plan.id %>?_method=DELETE" method="POST"
                                            onsubmit="return confirm('¿Eliminar este plan?')">
                                            <button type="submit" class="text-red-600 hover:underline">
                                                <i class="fas fa-trash-alt"></i> Eliminar
                                            </button>
                                        </form>
                                    </div>
                                </div>
                                <% }) %>
                        </div>
                        <% } else { %>
                            <p class="text-gray-500 italic text-sm text-center mt-8">No hay planes alimenticios
                                registrados aún.</p>
                            <% } %>

</div>
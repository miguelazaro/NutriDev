<div class="max-w-3xl mx-auto bg-white p-6 sm:p-8 shadow rounded-lg space-y-6">
    <div class="flex justify-between items-start gap-4">
        <div>
            <h1 class="text-2xl sm:text-3xl font-bold text-emerald-600">
                <%= plan.titulo %>
            </h1>
            <p class="text-sm text-gray-500">
                Tipo:
                <span class="<%= plan.tipo === 'ia' ? 'text-purple-600' : 'text-green-600' %> font-medium">
                    <%= plan.tipo==='ia' ? 'Generado por IA' : 'Manual' %>
                </span>
                · Paciente:
                <span class="text-gray-700 font-medium">
                    <%= plan.paciente ? plan.paciente.nombre : '—' %>
                </span>
            </p>
            <p class="text-xs text-gray-400 mt-1">
                Creado: <%= new Date(plan.createdAt).toLocaleString('es-MX') %>
                    · Actualizado: <%= new Date(plan.updatedAt).toLocaleString('es-MX') %>
            </p>
        </div>

        <div class="flex flex-col items-end space-y-2">
            <a href="/planes-alimenticios"
                class="inline-flex items-center text-sm font-medium text-emerald-600 hover:underline">
                <i class="fas fa-arrow-left mr-2"></i>
                Volver a Planes Alimenticios
            </a>
            <div class="flex space-x-2">
                <a href="/planes-alimenticios/<%= plan.id %>/pdf"
                    class="inline-flex items-center bg-emerald-600 hover:bg-emerald-700 text-white px-4 py-2 rounded shadow text-sm">
                    <i class="fas fa-file-pdf mr-2"></i> Descargar PDF
                </a>
                <a href="/planes-alimenticios/<%= plan.id %>/editar"
                    class="inline-flex items-center bg-yellow-500 hover:bg-yellow-600 text-white px-4 py-2 rounded shadow text-sm">
                    <i class="fas fa-edit mr-2"></i> Editar
                </a>
            </div>
        </div>
    </div>

    <div class="prose max-w-none">
        <!-- Importante: contenido ya viene sanitizado desde el controlador -->
        <%- contenidoSeguro %>
    </div>
</div>
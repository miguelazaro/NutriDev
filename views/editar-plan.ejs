<div class="max-w-3xl mx-auto bg-white p-6 sm:p-8 shadow rounded space-y-6">
    <div class="flex justify-between items-center mb-4">
        <h1 class="text-2xl font-bold text-emerald-600">Editar Plan Alimenticio</h1>
        <a href="/planes-alimenticios"
            class="inline-flex items-center text-sm font-medium text-emerald-600 hover:underline">
            <i class="fas fa-arrow-left mr-2"></i>
            Volver a Planes Alimenticios
        </a>
    </div>

    <form action="/planes-alimenticios/<%= plan.id %>" method="POST">
        <!-- Necesario para que method-override detecte el PUT -->
        <input type="hidden" name="_method" value="PUT" />

        <div class="mb-4">
            <label class="block text-gray-700 font-medium mb-1">TÃ­tulo</label>
            <input type="text" name="titulo" value="<%= plan.titulo %>" required
                class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:border-emerald-500" />
        </div>

        <div class="mb-4">
            <label class="block text-gray-700 font-medium mb-1">Contenido del plan</label>
            <textarea name="contenido" rows="8" required
                class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:border-emerald-500"><%= plan.contenido %></textarea>
        </div>

        <div class="flex justify-end">
            <button type="submit"
                class="bg-emerald-600 hover:bg-emerald-700 text-white px-5 py-2 rounded shadow font-medium">
                Guardar cambios
            </button>
        </div>
    </form>
</div>
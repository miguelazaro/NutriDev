<% if (messages) { %>
  <div class="space-y-2 mb-4">
    <% (messages.success || []).forEach(m => { %>
      <div class="rounded-lg bg-emerald-50 text-emerald-800 px-4 py-2 border border-emerald-200">
        <i class="fas fa-check mr-2"></i><%= m %>
      </div>
    <% }) %>

    <% (messages.error || []).forEach(m => { %>
      <div class="rounded-lg bg-red-50 text-red-800 px-4 py-2 border border-red-200">
        <i class="fas fa-exclamation-triangle mr-2"></i><%= m %>
      </div>
    <% }) %>

    <% (messages.info || []).forEach(m => { %>
      <div class="rounded-lg bg-blue-50 text-blue-800 px-4 py-2 border border-blue-200">
        <i class="fas fa-info-circle mr-2"></i><%= m %>
      </div>
    <% }) %>

    <% (messages.warning || []).forEach(m => { %>
      <div class="rounded-lg bg-yellow-50 text-yellow-800 px-4 py-2 border border-yellow-200">
        <i class="fas fa-exclamation-circle mr-2"></i><%= m %>
      </div>
    <% }) %>
  </div>
<% } %>
